<?php if (!$block->isStarkenPro() || !$block->getSaSpTrackingContent()) return; ?>
<section class="block block-order-details-view sp-tracking-info-ctn">
    <div class="block-title" style="margin-bottom: 0px;">
        <strong><?php /* @escapeNotVerified */ echo __('Shipment Information') ?></strong>
    </div>
    <div class="block-content">
        <?php if ($block->getShipment()->getId()) { ?>
            <?php if ($block->getShipment()->getSaSpFreightOrder()) {  ?>
                <h3 class="title"><?php /* @escapeNotVerified */ echo __('Freight Order')." ".$block->getShipment()->getSaSpFreightOrder(); ?></h3>
            <?php } ?>
        <?php } ?>
        <h3 class="title"><?php /* @escapeNotVerified */ echo __('Tracking History'); ?></h3>
