            <thead>
            <tr class="headings">
                <?php $i = 0;
                $columns = $block->getColumns();
                $lastItemNumber = count($columns) ?>
                <?php foreach ($columns as $columnName => $columnTitle) : ?>
                    <?php $i++; ?>
                    <th class="col-<?= $block->escapeHtmlAttr($columnName) ?><?= /* @noEscape */ ($i === $lastItemNumber ? ' last' : '') ?>"><span><?= $block->escapeHtml($columnTitle) ?></span></th>
                <?php endforeach; ?>
            </tr>
            </thead>
            <tbody>
                <?php $_items = $block->getItems();?>
                <?php $i = 0; foreach ($_items as $_item) : ?>
                <?php $i++; ?>
                <tr class="<?= /* @noEscape */ $i%2 ? 'even' : 'odd' ?>">
                    <?php foreach (array_keys($_item) as $_field) : ?>
                        <td class="col-<?php echo $_field; ?>"><?php echo $_item[$_field]; ?></td>
                    <?php endforeach; ?>
                </tr>
                <?php endforeach; ?>
            </tbody>
        </table>
    </div>
